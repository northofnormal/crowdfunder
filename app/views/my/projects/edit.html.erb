<h1>Create a new project!</h1>

<% form_for @project do |f| %>
	<div class="field">
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :teaser %>
		<%= f.text_field :teaser %>
	</div>
	<div class="field">
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>
	<div class="field">
		<%= f.label :goal %>
		<%= f.number_field :goal %>
	</div>
	<%= f.submit "Publish Project" %>
<% end %>